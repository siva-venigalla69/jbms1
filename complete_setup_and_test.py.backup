def cleanup_backend(process):
    """Cleanup backend process"""
    if process:
        print("\nğŸ§¹ Cleaning up backend process...")
        process.terminate()
        try:
            process.wait(timeout=5)
        except subprocess.TimeoutExpired:
            process.kill()
        print("âœ… Backend process cleaned up")

